<div id="<%= dom_id metting %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= metting.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start time:</strong>
    <%= metting.start_time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End time:</strong>
    <%= metting.end_time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= metting.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this metting", metting, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this metting", edit_metting_path(metting), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
